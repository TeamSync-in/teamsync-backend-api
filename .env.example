# ==================================================
# TeamSync Backend Environment Configuration
# ==================================================
# Copy this file to .env and update the values with your configuration

# ==================
# Database Configuration
# ==================
# MongoDB connection string - replace with your database URL
# For local MongoDB: mongodb://localhost:27017/teamsync_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb://localhost:27017/teamsync_db

# ==================
# JWT Configuration
# ==================
# Secret key for signing JWT tokens (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time (e.g., 1d, 7d, 24h, 3600s)
JWT_EXPIRES_IN=1d

# ==================
# Session Configuration
# ==================
# Secret key for signing session cookies (use a strong, random string in production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Session expiration time
SESSION_EXPIRES_IN=1d

# ==================
# Google OAuth Configuration
# ==================
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# 1. Create a project
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URIs
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Google OAuth callback URL (backend endpoint)
# Development: http://localhost:8000/api/auth/google/callback
# Production: https://yourdomain.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# ==================
# Frontend Configuration
# ==================
# Frontend application URL for CORS and redirects
# Development: http://localhost:3000
# Production: https://yourfrontenddomain.com
FRONTEND_ORIGIN=http://localhost:3000

# Frontend Google OAuth callback URL (where users are redirected after OAuth)
# This should match your frontend routing
FRONTEND_GOOGLE_CALLBACK_URL=http://localhost:3000/google/oauth/callback

# ==================
# Server Configuration
# ==================
# Application environment (development, production, test)
NODE_ENV=development

# Port number for the server to listen on
PORT=8000

# Base path for all API routes (usually /api)
BASE_PATH=/api

# ==================
# Optional Configuration
# ==================
# Uncomment and configure these if needed

# Email service configuration (for notifications)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Rate limiting configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# File upload configuration
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=uploads

# Redis configuration (for caching, sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Logging configuration
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# ==================
# Security Notes
# ==================
# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique secrets for JWT_SECRET and SESSION_SECRET
# 3. In production, use environment-specific values
# 4. Consider using a secret management service for production
# 5. Regularly rotate your secrets and API keys
# 6. Use HTTPS in production for all URLs
# 7. Validate and sanitize all environment variables
